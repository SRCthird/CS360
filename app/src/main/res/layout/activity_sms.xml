<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewSmsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_notifications"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textViewItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item: \nLocation:"
            android:textColor="#111111"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/textViewPermissionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/permission_not_checked"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonRequestPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_sms_permission"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonSendSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_test_sms"
            android:backgroundTint="#03DAC5"
            android:textColor="#FFFFFF"
            android:enabled="false" />
    </LinearLayout>
</ScrollView>